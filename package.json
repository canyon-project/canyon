    "migrate": "prisma migrate dev --schema ./packages/canyon-backend/prisma/schema.prisma"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prisma": "5.16.1"
  },
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@types/react": "18.3.1",
      "@types/react-dom": "18.3.1",
      "antd": "5.23.2",
      "vite": "6.0.11",
      "canyon-data": "2.0.0-beta.24"
    },
    "ignoredBuiltDependencies": [
      "@apollo/protobufjs",
      "@biomejs/biome",
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "@tailwindcss/oxide",
      "core-js",
      "esbuild",
      "prisma",
      "protobufjs",
      "sharp",
      "unrs-resolver"
