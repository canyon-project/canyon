{
  "name": "@canyonjs/monorepo",
  "version": "3.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "preinstall": "node ./scripts/check.mjs",
    "clean": "node ./scripts/clean.mjs",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "pnpm run -r test",
    "dev": "pnpm run -r dev",
    "build": "pnpm run -r build",
    "migrate": "prisma migrate dev --schema ./packages/backend/prisma/schema.prisma",
    "migrate:sql:root": "prisma migrate diff --from-empty --to-schema-datamodel ./packages/backend/prisma/schema.prisma --script > ./schema.sql",
    "idea:update-excludes": "node ./scripts/update-idea-excludes.mjs",
    "idea:watch-excludes": "node ./scripts/watch-idea-excludes.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9"
  }
}
